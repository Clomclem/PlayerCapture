{
  "schemaVersion": 1,
  "id": "playercapture",
  "version": "${version}",

  "name": "PlayerCapture",
  "description": "A Fabric mod which allows you to capture players after they die.",
  "authors": [
    "Clomclem"
  ],
  "contact": {
    "homepage": "https://github.com/Clomclem/PlayerCapture",
    "sources": "https://github.com/Clomclem/PlayerCapture"
  },

  "license": "MIT",
  "icon": "assets/playercapture/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.clomclem.playercapture.PlayerCapture"
    ]
  },
  "mixins": [
    "playercapture.mixins.json"
  ],

  "depends": {
